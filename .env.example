# Development Environment Configuration
# Copy this to .env for local development

# Application
ENVIRONMENT=development
DEBUG=True
APP_NAME=Tesseract SaaS MVP
APP_VERSION=0.1.0

# Security (Development - Less restrictive)
SECRET_KEY=dev-secret-key-not-for-production
REQUIRE_API_KEY=False
API_KEYS=
ENABLE_RATE_LIMITING=False

# CORS
CORS_ORIGINS=http://localhost:3000,http://frontend:3000
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Database
DATABASE_URL=postgresql+asyncpg://tesseract:tesseract@postgres:5432/tesseract
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://redis:6379/0

# AWS (LocalStack for development)
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=http://localstack:4566
S3_BUCKET_NAME=tesseract-uploads
SQS_QUEUE_NAME=tesseract-tasks

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=.pdf

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Database (for docker-compose)
POSTGRES_USER=tesseract
POSTGRES_PASSWORD=tesseract
POSTGRES_DB=tesseract
