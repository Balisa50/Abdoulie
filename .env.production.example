# Production Environment Configuration
# Copy this to .env.production and configure with actual values

# Application
ENVIRONMENT=production
DEBUG=False
APP_NAME=Tesseract SaaS MVP
APP_VERSION=0.1.0

# Security (REQUIRED: Change these in production!)
SECRET_KEY=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_AT_LEAST_32_CHARACTERS_LONG
REQUIRE_API_KEY=True
API_KEYS=your-api-key-1,your-api-key-2
ENABLE_RATE_LIMITING=True
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60

# CORS - Set to your actual frontend domain
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Database (REQUIRED: Use strong credentials!)
DATABASE_URL=postgresql+asyncpg://prod_user:STRONG_PASSWORD_HERE@postgres:5432/tesseract_prod
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis
REDIS_URL=redis://redis:6379/0

# AWS (REQUIRED: Use real AWS credentials)
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=
S3_BUCKET_NAME=your-production-bucket
SQS_QUEUE_NAME=your-production-queue

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=.pdf

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# PostgreSQL (for docker-compose)
POSTGRES_USER=prod_user
POSTGRES_PASSWORD=STRONG_PASSWORD_HERE
POSTGRES_DB=tesseract_prod
